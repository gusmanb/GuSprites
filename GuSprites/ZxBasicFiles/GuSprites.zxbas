PROC
LOCAL REAL_OP, NO_OP, END_SET

SET_TILE_CHECKED:       ;input: a = tile number, c = color, e = x, l = y, trashes bc, de, hl, a

HL_POW2_5()             ;y * 32

add hl, de              ;+ x

push hl                 ;store displacement for later check of clear ops

