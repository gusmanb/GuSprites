inc hl
inc hl

pop de

WRITE_HL_POINTER(d, e)

ld a, 2
ld (hl), a

pop de                                  ;cleanup
pop de                                  ;cleanup

jp END_SET

NO_OP:

pop hl
pop de
pop bc

ld a, d                 ;calculate screen address
rla
rla
rla
or %01000000
ld d, a

