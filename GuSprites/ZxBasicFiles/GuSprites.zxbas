add hl, bc

push hl                 ;store tile source address for later check

pop bc                                  ;tile source address
pop hl                                  ;displacement

push hl
push de
push bc                                ;preserve tile source address

ld de, (CURRENT_DRAW_MAP)

add hl, de                             ;advance pointer to concrete cell

ld a, (hl)
and a
jp z, NO_OP                            ;a = num op

