ld (SPRITE_COUNT), a
#endif

xor a
ld (CURRENT_DRAW_COUNT), a
ld (CURRENT_CLEAR_COUNT), a

ERASE_MEMORY(CELL_MAP_A, 768)
ERASE_MEMORY(CELL_MAP_B, 768)

#ifdef ENABLE_TILES
ERASE_MEMORY(TILE_MAP, 768)
#endif

ret
ENDP

